<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_margin="5dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_color_item_rv_activity_calendar"
        android:layout_width="5dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:background="@color/blue"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/tv_color_item_rv_activity_calendar"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_time_item_rv_activity_calendar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:text="13:30 ~ 22:00"
            android:gravity="bottom"
            android:textSize="13sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tv_title_item_rv_activity_calendar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:text="ddd"
            android:gravity="top"
            android:textSize="19sp"
            android:textColor="@color/black"/>

    </LinearLayout>

</RelativeLayout>
